{
    "name": "oke11o/framwork-example",
    "authors": [
        {
            "name": "Sergey Bevzenko",
            "email": "bevzenko.sergey@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/App",
            "Framework\\": "src/Framework"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "zendframework/zend-diactoros": "^1.8",
        "zendframework/zend-httphandlerrunner": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "roave/security-advisories": "dev-master"
    },
    "scripts": {
        "serve": "php -S 127.0.0.1:8082 -t public public/index.php"
    }
}
